<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.charts.charts.incrementalupdate.xy.UpdateXyChartFrame"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <dsContext>
        <collectionDatasource id="pointsDs"
                              class="com.haulmont.sampler.entity.PointValue"
                              view="_local">
            <query>
                <![CDATA[select e from sampler$PointValue e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="xyChart" spacing="true">
        <hbox spacing="true">
            <button caption="Start" icon="font-awesome-icon:PLAY" invoke="startTimer"/>
            <button caption="Stop" icon="font-awesome-icon:STOP" invoke="stopTimer"/>
            <label value="Delay:" align="MIDDLE_LEFT"/>
            <textField id="delayField" datatype="int">
                <formatter class="com.haulmont.cuba.gui.components.formatters.NumberFormatter" format="#"/>
            </textField>
        </hbox>
        <chart:xyChart id="xyChart"
                       datasource="pointsDs"
                       marginBottom="35"
                       marginLeft="46"
                       startDuration="1"
                       theme="LIGHT"
                       width="100%">
            <chart:graphs>
                <chart:graph balloonText="x:&lt;b&gt;[[x]]&lt;/b&gt; y:&lt;b&gt;[[y]]&lt;/b&gt;
                &lt;br&gt;value:&lt;b&gt;[[value]]&lt;/b&gt;"
                             bullet="ROUND"
                             bulletAlpha="0.8"
                             bulletBorderAlpha="0.2"
                             fillAlphas="0"
                             lineAlpha="0"
                             maxBulletSize="100"
                             valueField="value"
                             xField="x"
                             yField="y"/>
            </chart:graphs>
            <chart:balloon fixedPosition="true"/>
            <chart:valueAxes>
                <chart:axis axisAlpha="0"
                            position="BOTTOM"/>
                <chart:axis axisAlpha="0"
                            minMaxMultiplier="1.2"
                            position="LEFT"/>
            </chart:valueAxes>
            <chart:export/>
        </chart:xyChart>
    </layout>
</window>
