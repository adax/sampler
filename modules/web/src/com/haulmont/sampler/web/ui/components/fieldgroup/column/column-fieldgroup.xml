<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.components.fieldgroup.column.ColumnFieldGroupFrame">
    <dsContext>
        <datasource id="customerDs"
                    allowCommit="false"
                    class="com.haulmont.sampler.entity.Customer"
                    view="_local"/>
    </dsContext>
    <layout>
        <fieldGroup datasource="customerDs"
                    width="50%">
            <column flex="2"
                    width="100%">
                <field id="name"/>
                <field id="lastName"/>
            </column>
            <column flex="1"
                    width="100%">
                <field id="age"/>
                <field id="grade"/>
                <field id="active"/>
            </column>
        </fieldGroup>
    </layout>
</window>
