<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.components.twincolumn.customoptions.CustomOptionsTwinColumnFrame">
    <layout>
        <hbox spacing="true">
            <vbox spacing="true">
                <twinColumn id="twinColumnWithOptionsList"
                            caption="Options List"/>
                <button caption="Show value"
                        invoke="showOptionsListValue"/>
            </vbox>
            <vbox spacing="true">
                <twinColumn id="twinColumnWithOptionsMap"
                            caption="Options Map"/>
                <button caption="Show value"
                        invoke="showOptionsMapValue"/>
            </vbox>
            <vbox spacing="true">
                <twinColumn id="twinColumnWithOptionsEnum"
                            caption="Options Enum"/>
                <button caption="Show value"
                        invoke="showOptionsEnumValue"/>
            </vbox>
        </hbox>
    </layout>
</window>
