<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.components.tokenlist.simplemode.SimpleModeTokenListFrame">
    <dsContext>
        <datasource id="orderDs"
                    allowCommit="false"
                    class="com.haulmont.sampler.entity.Order"
                    view="order-edit">
            <collectionDatasource id="orderItemsDs"
                                  allowCommit="false"
                                  property="items"/>
        </datasource>
        <collectionDatasource id="allItemsDs"
                              class="com.haulmont.sampler.entity.OrderItem"
                              view="orderItem-with-product">
            <query>
                <![CDATA[select e from sampler$OrderItem e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <tokenList id="linesList"
                   datasource="orderItemsDs"
                   simple="true"
                   width="320px">
            <lookup multiselect="true"
                    optionsDatasource="allItemsDs"/>
            <addButton icon="icons/plus-btn.png"/>
        </tokenList>
    </layout>
</window>
