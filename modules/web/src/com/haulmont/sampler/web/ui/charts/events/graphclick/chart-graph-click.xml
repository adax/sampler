<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.web.ui.charts.events.graphclick.ChartGraphClickFrame"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <dsContext>
        <collectionDatasource id="incomeExpensesDs"
                              class="com.haulmont.sampler.entity.IncomeExpenses"
                              view="_local">
            <query>
                <![CDATA[select e from sampler$IncomeExpenses e order by e.year]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <chart:serialChart id="chart"
                           autoMargins="false"
                           categoryField="year"
                           datasource="incomeExpensesDs"
                           height="100%"
                           marginBottom="26"
                           marginLeft="30"
                           marginRight="8"
                           marginTop="10"
                           startDuration="1"
                           width="100%">
            <chart:valueAxes>
                <chart:axis axisAlpha="0"
                            position="LEFT"/>
            </chart:valueAxes>
            <chart:graphs>
                <chart:graph id="columnGraph"
                             alphaField="alpha"
                             dashLengthField="dashLengthColumn"
                             fillAlphas="1"
                             title="Income"
                             type="COLUMN"
                             valueField="income"/>
                <chart:graph id="lineGraph"
                             bullet="ROUND"
                             bulletBorderAlpha="1"
                             bulletBorderThickness="3"
                             bulletColor="WHITE"
                             bulletSize="7"
                             dashLengthField="dashLengthLine"
                             fillAlphas="0"
                             lineAlpha="1"
                             lineThickness="3"
                             title="Expenses"
                             valueField="expenses"/>
            </chart:graphs>
            <chart:categoryAxis axisAlpha="0"
                                gridPosition="START"
                                tickLength="0"/>
            <chart:export/>
        </chart:serialChart>
    </layout>
</window>
