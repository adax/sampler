<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.cuba.gui.components.AbstractFrame">
    <dsContext>
        <collectionDatasource id="ordersDs"
                              class="com.haulmont.sampler.entity.Order"
                              view="_local">
            <query>
                <![CDATA[select e from sampler$Order e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <table id="orderTable"
               height="200px"
               width="480px">
            <columns>
                <column id="date"/>
                <column id="amount"/>
                <column id="description"/>
            </columns>
            <rows datasource="ordersDs"/>
            <buttonsPanel>
                <relatedEntities for="orderTable"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
