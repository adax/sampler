<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.bulkeditor.BulkEditorFrame">
    <dsContext>
        <collectionDatasource id="customersDs"
                              class="com.haulmont.sampler.entity.Customer"
                              view="_local">
            <query>
                <![CDATA[select e from sampler$Customer e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <table id="customersTable"
               height="200px"
               multiselect="true"
               width="400px">
            <columns>
                <column id="name"/>
                <column id="lastName"/>
                <column id="age"/>
                <column id="active"/>
            </columns>
            <rows datasource="customersDs"/>
            <buttonsPanel>
                <bulkEditor for="customersTable"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
