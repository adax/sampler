<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.tokenlist.simple.SimpleTokenListFrame">
    <dsContext>
        <datasource id="orderDs"
                    allowCommit="false"
                    class="com.haulmont.sampler.entity.Order"
                    view="order-edit">
            <collectionDatasource id="invoiceDs"
                                  allowCommit="false"
                                  property="invoice"/>
        </datasource>
        <collectionDatasource id="allInvoicesDs"
                              class="com.haulmont.sampler.entity.InvoiceItem"
                              view="invoiceItem-with-product">
            <query>
                <![CDATA[select e from sampler$InvoiceItem e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <tokenList id="linesList"
                   datasource="invoiceDs"
                   simple="true"
                   width="320px">
            <lookup multiselect="true"
                    optionsDatasource="allInvoicesDs"/>
            <button icon="icons/plus-btn.png"/>
        </tokenList>
    </layout>
</window>
