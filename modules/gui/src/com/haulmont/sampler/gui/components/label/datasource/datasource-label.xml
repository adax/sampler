<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.label.datasource.DatasourceLabelFrame">
    <dsContext>
        <datasource id="customerDs"
                    class="com.haulmont.sampler.entity.Customer"
                    view="_minimal"
                    allowCommit="false"/>
    </dsContext>
    <layout>
        <hbox spacing="true">
            <textField datasource="customerDs"
                       property="name"/>
            <label align="MIDDLE_CENTER"
                   datasource="customerDs"
                   property="name"/>
        </hbox>
    </layout>
</window>
