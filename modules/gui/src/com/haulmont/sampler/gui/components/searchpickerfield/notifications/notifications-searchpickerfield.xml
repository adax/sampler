<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.searchpickerfield.notifications.NotificationsSearchPickerFieldFrame">
    <dsContext>
        <datasource id="orderDs"
                    allowCommit="false"
                    class="com.haulmont.sampler.entity.Order"
                    view="order-with-customer"/>
        <collectionDatasource id="customersDs"
                              class="com.haulmont.sampler.entity.Customer"
                              view="_local">
            <query>
                <![CDATA[select e from sampler$Customer e where e.name like :(?i)custom$searchString]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout spacing="true">
        <textField id="minLength"
                   caption="minSearchStringLength"
                   datatype="int"/>
        <searchPickerField id="searchPickerField"
                           datasource="orderDs"
                           optionsDatasource="customersDs"
                           property="customer">
            <actions>
                <action id="lookup"/>
                <action id="open"/>
            </actions>
        </searchPickerField>
    </layout>
</window>
