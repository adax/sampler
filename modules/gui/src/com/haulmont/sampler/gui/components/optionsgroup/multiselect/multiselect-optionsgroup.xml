<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.optionsgroup.multiselect.MultiSelectOptionsGroupFrame">
    <dsContext>
        <collectionDatasource id="productsDs"
                              class="com.haulmont.sampler.entity.Product"
                              view="_local">
            <query>
                <![CDATA[select e from sampler$Product e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <optionsGroup id="optionsGroup"
                      optionsDatasource="productsDs"
                      multiselect="true"/>
    </layout>
</window>
