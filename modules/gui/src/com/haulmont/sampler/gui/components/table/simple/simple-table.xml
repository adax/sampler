<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.table.simple.SimpleTableFrame">
    <dsContext>
        <collectionDatasource id="ordersDs"
                              class="com.haulmont.sampler.entity.Order"
                              view="order-with-customer">
            <query>
                <![CDATA[select e from sampler$Order e order by e.date]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout spacing="true">
        <hbox spacing="true">
            <checkBox id="multiselect"
                      caption="multiselect"/>
            <checkBox id="sortable"
                      caption="sortable"/>
            <checkBox id="columnControlVisible"
                      caption="columnControlVisible"/>
            <checkBox id="reorderingAllowed"
                      caption="reorderingAllowed"/>
        </hbox>
        <table id="ordersTable"
               height="200px"
               width="100%">
            <columns>
                <column id="date"/>
                <column id="customer"/>
                <column id="amount"/>
                <column id="description"/>
            </columns>
            <rows datasource="ordersDs"/>
        </table>
    </layout>
</window>
