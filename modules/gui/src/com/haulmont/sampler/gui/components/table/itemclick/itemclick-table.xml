<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.table.itemclick.ItemClickTableFrame">
    <dsContext>
        <collectionDatasource id="customersDs"
                              class="com.haulmont.sampler.entity.Customer"
                              view="_minimal">
            <query>
                <![CDATA[select e from sampler$Customer e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <table id="customerTable"
               height="200px"
               width="480px">
            <columns>
                <column id="name"/>
                <column id="lastName"/>
            </columns>
            <rows datasource="customersDs"/>
        </table>
    </layout>
</window>
