<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.optionsgroup.simple.SimpleOptionsGroupFrame">
    <dsContext>
        <datasource id="customerDs"
                    allowCommit="false"
                    class="com.haulmont.sampler.entity.Customer"
                    view="_local"/>
    </dsContext>
    <layout spacing="true">
        <optionsGroup datasource="customerDs"
                      property="grade"
                      caption="Vertical"/>

        <optionsGroup datasource="customerDs"
                      property="grade"
                      caption="Horizontal"
                      orientation="horizontal"/>
    </layout>
</window>
