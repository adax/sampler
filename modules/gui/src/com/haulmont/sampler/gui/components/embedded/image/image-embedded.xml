<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.sampler.gui.components.embedded.image.ImageEmbeddedFrame">
    <layout>
        <hbox spacing="true">
            <groupBox id="groupBoxImage"
                      caption="Embedded image"
                      height="250px"
                      width="300px">
                <embedded id="embeddedImage"
                          align="MIDDLE_CENTER"
                          width="100%"/>
            </groupBox>
            <groupBox caption="Embedded image file"
                      height="250px"
                      width="250px">
                <embedded id="embeddedImageFile"
                          align="MIDDLE_CENTER"/>
            </groupBox>
        </hbox>
    </layout>
</window>
