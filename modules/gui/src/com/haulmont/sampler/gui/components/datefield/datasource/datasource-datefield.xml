<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.sampler.gui.components.datefield.datasource.DatasourceDateFieldFrame">
    <dsContext>
        <datasource id="ordersDs"
                    class="com.haulmont.sampler.entity.Order"
                    view="_minimal"
                    allowCommit="false"/>
    </dsContext>
    <layout spacing="true">
        <dateField datasource="ordersDs"
                   property="date"/>
        <hbox spacing="true">
            <label value="Value in the Datasource:"/>
            <label datasource="ordersDs"
                   property="date"/>
        </hbox>
    </layout>
</window>
