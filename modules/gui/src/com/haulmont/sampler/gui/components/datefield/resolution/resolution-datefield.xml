            <dateField resolution="HOUR" caption="resolution=HOUR"/>
            <dateField resolution="MIN" caption="resolution=MIN"/>
            <dateField resolution="SEC" caption="resolution=SEC"/>
        </hbox>
    </layout>
</window>
