        messagesPack="com.haulmont.sampler.gui.components.datefield">
    <dsContext/>
    <layout spacing="true">
        <hbox spacing="true">
            <dateField resolution="YEAR" caption="resolution=YEAR"/>
            <dateField resolution="MONTH" caption="resolution=MONTH"/>
            <dateField resolution="DAY" caption="resolution=DAY"/>
