<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.sampler.gui.entities.orderline.OrderLineEdit"
        datasource="orderLineDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.sampler.gui.entities.orderline">
    <dsContext>
        <datasource id="orderLineDs"
                    class="com.haulmont.sampler.entity.OrderLine"
                    view="orderLine-with-product"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderLineDs">
            <column width="250px">
                <field id="product"/>
                <field id="quantity"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
