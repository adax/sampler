<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.sampler.gui.entities.order.OrderBrowse"
        focusComponent="orderTable"
        lookupComponent="orderTable"
        messagesPack="com.haulmont.sampler.gui.entities.order">
    <dsContext>
        <collectionDatasource id="orderDs"
                              class="com.haulmont.sampler.entity.Order"
                              view="order-with-customer">
            <query>
                <![CDATA[select e from sampler$Order e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="orderTable"
            spacing="true">
        <filter id="filter"
                datasource="orderDs">
            <properties include=".*"/>
        </filter>
        <table id="orderTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="customer"/>
                <column id="date"/>
                <column id="amount"/>
                <column id="description"/>
            </columns>
            <rows datasource="orderDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="orderTable.create"/>
                <button id="editBtn"
                        action="orderTable.edit"/>
                <button id="removeBtn"
                        action="orderTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
