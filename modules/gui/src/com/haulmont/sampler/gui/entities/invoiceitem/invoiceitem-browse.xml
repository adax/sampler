<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.sampler.gui.entities.invoiceitem.InvoiceItemBrowse"
        focusComponent="invoiceItemsTable"
        lookupComponent="invoiceItemsTable"
        messagesPack="com.haulmont.sampler.gui.entities.invoiceitem">
    <dsContext>
        <collectionDatasource id="invoiceItemsDs"
                              class="com.haulmont.sampler.entity.InvoiceItem"
                              view="invoiceItem-with-product">
            <query>
                <![CDATA[select e from sampler$InvoiceItem e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="invoiceItemsTable"
            spacing="true">
        <filter id="filter"
                datasource="invoiceItemsDs">
            <properties include=".*"/>
        </filter>
        <table id="invoiceItemsTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="product"/>
                <column id="quantity"/>
            </columns>
            <rows datasource="invoiceItemsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="invoiceItemsTable.create"/>
                <button id="editBtn"
                        action="invoiceItemsTable.edit"/>
                <button id="removeBtn"
                        action="invoiceItemsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
