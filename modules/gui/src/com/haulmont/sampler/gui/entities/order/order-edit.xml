<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.sampler.gui.entities.order.OrderEdit"
        datasource="orderDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.sampler.gui.entities.order">
    <dsContext>
        <datasource id="orderDs"
                    class="com.haulmont.sampler.entity.Order"
                    view="order-edit">
            <collectionDatasource id="invoiceDs"
                                  property="items"/>
        </datasource>
    </dsContext>
    <layout expand="invoiceTable"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderDs">
            <column width="250px">
                <field id="date"/>
                <field id="amount"/>
                <field id="customer"/>
                <field id="description"/>
            </column>
        </fieldGroup>
        <table id="invoiceTable"
               width="480px">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="product.name"/>
                <column id="product.price"/>
                <column id="quantity"/>
            </columns>
            <rows datasource="invoiceDs"/>
            <buttonsPanel>
                <button action="invoiceTable.create"/>
                <button action="invoiceTable.edit"/>
                <button action="invoiceTable.remove"/>
            </buttonsPanel>
        </table>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
