<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.sampler.gui.entities.order.OrderEdit"
        datasource="orderDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.sampler.gui.entities.order">
    <dsContext>
        <datasource id="orderDs"
                    class="com.haulmont.sampler.entity.Order"
                    view="order-with-customer"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="orderDs">
            <column width="250px">
                <field id="customer"/>
                <field id="date"/>
                <field id="amount"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
